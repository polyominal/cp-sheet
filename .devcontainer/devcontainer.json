{
	"image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers-community/features/llvm:3": {
			"version": 18
		},
		"ghcr.io/devcontainers/features/rust:1": {}
	},
	"updateContentCommand": "./.devcontainer/extra.sh",
	"customizations": {
		"vscode": {
			"settings": {
				"C_Cpp.intelliSenseEngine": "disabled",
				"clangd.fallbackFlags": [
					"-std=c++20",
					"-Wall",
					"-Wextra",
					"-Wshadow",
					"-Wconversion",
					"-Wno-sign-conversion",
					"-Isrc"
				],
				"clangd.arguments": [
					"--background-index",
					"--log=verbose",
					"--pretty",
					"--function-arg-placeholders=true"
				],
				// Reference: https://stackoverflow.com/questions/55987337/visual-studio-code-remote-containers-change-shell
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/usr/bin/zsh"
					}
				},
				"[cpp]": {
					"editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
				},
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"files.trimTrailingWhitespace": true
			},
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"BazelBuild.vscode-bazel"
			]
		}
	},
	"containerEnv": {
		"BAZEL_VERSION": "8.1.1",
		"BUILDIFIER_VERSION": "v8.0.3"
	}
}